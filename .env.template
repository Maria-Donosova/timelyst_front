# .env.template
# Copy this file to .env and fill in the values locally.
# IMPORTANT: Never commit your .env file.
# Secrets (like GOOGLE_CLIENT_SECRET) should ONLY be kept in the BACKEND environment.

FRONTEND_URL='http://localhost:7357'
BACKEND_URL='https://your-backend-url.com'
BACKEND_URL_GRAPHQL='https://your-backend-url.com/graphql'

# Backend Google Integration
REDIRECT_URL='https://your-backend-url.com/google/callback'
BACKEND_GOOGLE_CALENDAR='https://your-backend-url.com/google'
BACKEND_FETCH_GOOGLE_CALENDARS='https://your-backend-url.com/google'

# Google OAuth2 (Client ID is public for web)
GOOGLE_CLIENT_ID='your-google-client-id.apps.googleusercontent.com'
GOOGLE_OATH_URL='https://accounts.google.com/o/oauth2/auth'
GOOGLE_OATH2_TOKEN_URL='https://accounts.google.com/o/oauth2/token'

# Microsoft OAuth2
MICROSOFT_CLIENT_ID='your-microsoft-client-id'
MICROSOFT_TENANT_ID='common'
MICROSOFT_SCOPE='https://graph.microsoft.com/calendars.read https://graph.microsoft.com/calendars.readwrite'

# Apple OAuth2
APPLE_CLIENT_ID='your-apple-client-id'
APPLE_TEAM_ID='your-apple-team-id'
APPLE_KEY_ID='your-apple-key-id'
APPLE_SCOPE='https://www.icloud.com/calendar https://www.icloud.com/contacts'
